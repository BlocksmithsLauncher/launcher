{
  "name": "blocksmiths-launcher-public",
  "version": "1.2.1-public",
  "description": "Blocksmiths Launcher - Public Reference Version (Proprietary features removed)",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "obfuscate": "node obfuscate.js",
    "restore-backup": "node obfuscate.js restore",
    "build": "npm run obfuscate && electron-builder",
    "build:win": "npm run obfuscate && electron-builder --win",
    "build:win-debug": "electron-builder --win",
    "build:mac": "npm run obfuscate && electron-builder --mac",
    "build:mac-dmg": "npm run obfuscate && electron-builder --mac --config.mac.target=dmg",
    "build:mac-pkg": "npm run obfuscate && electron-builder --mac --config.mac.target=pkg",
    "build:mac-zip": "npm run obfuscate && electron-builder --mac --config.mac.target=zip",
    "build:linux": "npm run obfuscate && electron-builder --linux",
    "build:linux-appimage": "npm run obfuscate && electron-builder --linux --config.linux.target=AppImage",
    "build:linux-deb": "npm run obfuscate && electron-builder --linux --config.linux.target=deb",
    "build:linux-rpm": "npm run obfuscate && electron-builder --linux --config.linux.target=rpm",
    "build:linux-pacman": "npm run obfuscate && electron-builder --linux --config.linux.target=pacman",
    "build:linux-tar": "npm run obfuscate && electron-builder --linux --config.linux.target=tar.gz",
    "build:linux-all": "npm run obfuscate && electron-builder --linux --x64 --arm64",
    "build:mac-all": "npm run obfuscate && electron-builder --mac --x64 --arm64",
    "build:all": "npm run obfuscate && electron-builder --win --mac --linux --x64 --arm64",
    "build:no-obfuscate": "electron-builder",
    "pack": "electron-builder --dir",
    "pack:all": "electron-builder --dir --win --mac --linux",
    "dist:linux": "npm run build:linux-all",
    "dist:mac": "npm run build:mac-all",
    "dist:all": "npm run build:all"
  },
  "keywords": [
    "minecraft",
    "launcher",
    "electron",
    "gaming"
  ],
  "author": "Blocksmiths Team",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/BlocksmithsLauncher/launcher"
  },
  "type": "commonjs",
  "dependencies": {
    "@xmcl/installer": "^6.1.2",
    "adm-zip": "^0.5.10",
    "axios": "^1.6.0",
    "check-disk-space": "^3.4.0",
    "discord-rpc": "^4.0.1",
    "dotenv": "^16.6.1",
    "extract-zip": "^2.0.1",
    "fs-extra": "^11.3.2",
    "minecraft-launcher-core": "^3.18.2",
    "msmc": "^5.0.5",
    "node-fetch": "^2.7.0",
    "p-limit": "^3.1.0",
    "semver": "^7.5.4",
    "tar": "^6.2.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "electron": "38.2.1",
    "electron-builder": "^26.0.12",
    "javascript-obfuscator": "^4.1.1",
    "webpack-obfuscator": "^3.5.1"
  },
  "build": {
    "appId": "com.blocksmiths.launcher",
    "productName": "Blocksmiths Launcher",
    "asar": true,
    "asarUnpack": [
      "node_modules/msmc/**/*",
      "node_modules/@xmcl/**/*",
      "node_modules/tar/**/*"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "renderer/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "square-logo.ico",
      "!src-backup",
      "!renderer-backup",
      "!obfuscate.js"
    ],
    "extraResources": [
      {
        "from": "favicon.ico",
        "to": "favicon.ico"
      },
      {
        "from": "favicon.ico",
        "to": "app.ico"
      },
      {
        "from": "build/clear-icon-cache.ps1",
        "to": "clear-icon-cache.ps1"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "favicon.ico",
      "signAndEditExecutable": false,
      "requestedExecutionLevel": "asInvoker",
      "legalTrademarks": "Blocksmiths Launcher",
      "fileAssociations": []
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "pkg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icons/icon.icns",
      "category": "public.app-category.games",
      "bundleVersion": "1.0.0",
      "buildVersion": "1.0.0",
      "minimumSystemVersion": "10.15.0",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": {
        "teamId": "YOUR_TEAM_ID"
      },
      "dmg": {
        "title": "Blocksmiths Launcher",
        "icon": "assets/icons/icon.icns",
        "background": "assets/icons/dmg-background.png",
        "contents": [
          {
            "x": 130,
            "y": 220
          },
          {
            "x": 410,
            "y": 220,
            "type": "link",
            "path": "/Applications"
          }
        ],
        "window": {
          "width": 540,
          "height": 380
        }
      },
      "pkg": {
        "allowAnywhere": false,
        "allowCurrentUserHome": false,
        "allowRootDirectory": false,
        "installLocation": "/Applications",
        "welcome": "build/welcome.html",
        "conclusion": "build/conclusion.html",
        "background": "assets/icons/pkg-background.png"
      }
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "pacman",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icons/icon.png",
      "category": "Game",
      "executableName": "blocksmiths-launcher",
      "synopsis": "Modern Minecraft Launcher",
      "description": "A modern, feature-rich Minecraft launcher with mod support and cross-platform compatibility.",
      "maintainer": "Blocksmiths Team <support@blocksmithslauncher.com>",
      "homepage": "https://blocksmithslauncher.com",
      "license": "MIT",
      "desktop": {
        "Name": "Blocksmiths Launcher",
        "Comment": "Modern Minecraft Launcher",
        "Keywords": "minecraft;launcher;gaming;mods;",
        "StartupWMClass": "blocksmiths-launcher",
        "MimeType": "application/x-minecraft-modpack;"
      },
      "files": [
        "**/*",
        "!**/*.map",
        "!**/node_modules/**/*.{d.ts,map}",
        "!**/node_modules/.bin",
        "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
        "!.editorconfig",
        "!**/._*",
        "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
        "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
        "!**/{appveyor.yml,.travis.yml,circle.yml}",
        "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "Blocksmiths Launcher",
      "installerIcon": "favicon.ico",
      "uninstallerIcon": "favicon.ico",
      "installerHeader": "favicon.ico",
      "installerHeaderIcon": "favicon.ico",
      "include": "build/installer.nsh",
      "artifactName": "${productName} Setup ${version}.${ext}",
      "warningsAsErrors": false
    }
  }
}
